<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.orpheusdroid.screenrecorder.ui.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        app:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="?attr/toolbarStyle"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            app:title="@string/app_name"
            app:titleTextAppearance="@style/AppTheme.Title"
            app:popupTheme="@style/AppTheme.PopupOverlay.Light" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            style="?attr/tabBarStyle"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorAnimationMode="elastic"
            app:tabRippleColor="@color/colorRipple" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Bottom Record Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="80dp"
        android:text="@string/record_button_text"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:icon="@drawable/ic_videocam_white"
        app:iconGravity="start"
        app:iconSize="28dp"
        app:iconPadding="12dp"
        app:iconTint="@android:color/white"
        app:cornerRadius="28dp"
        app:backgroundTint="@color/colorAccent"
        app:elevation="8dp"
        style="@style/Widget.MaterialComponents.Button" />

    <!-- Recording Control Buttons Container -->
    <LinearLayout
        android:id="@+id/recording_controls_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <!-- Pause Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@string/pause_button_text"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="36dp"
            android:paddingEnd="36dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:icon="@drawable/ic_pause_white"
            app:iconGravity="start"
            app:iconSize="24dp"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/colorAccent"
            app:elevation="8dp"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Resume Button (shown when paused, replaces pause button) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_resume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="@string/resume_button_text"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="36dp"
            android:paddingEnd="36dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:icon="@drawable/ic_play_white"
            app:iconGravity="start"
            app:iconSize="24dp"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/colorAccent"
            app:elevation="8dp"
            android:visibility="gone"
            style="@style/Widget.MaterialComponents.Button" />

        <!-- Stop Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/stop_button_text"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="36dp"
            android:paddingEnd="36dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:icon="@drawable/ic_stop_white"
            app:iconGravity="start"
            app:iconSize="24dp"
            app:iconPadding="8dp"
            app:iconTint="@android:color/white"
            app:cornerRadius="28dp"
            app:backgroundTint="#E53935"
            app:elevation="8dp"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
