<resources>

    <!-- ========================== -->
    <!-- Modern Light Theme (Default) -->
    <!-- ========================== -->
    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="menuDeleteIcon">@drawable/ic_delete_white_24dp</item>
        <item name="menuSelectAllIcon">@drawable/ic_select_all_white_24dp</item>
        <item name="menuShareIcon">@drawable/ic_share_white_24dp</item>
    </style>

    <!-- Modern Toolbar style -->
    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <!-- Kept for backwards compatibility -->
    <style name="AppTheme.Base.ToolBar" parent="AppTheme.Toolbar" />

    <!-- Modern TabBar style -->
    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextColor">#B3FFFFFF</item>
        <item name="tabTextAppearance">@style/AppTheme.TabText</item>
        <item name="tabRippleColor">@color/colorRipple</item>
    </style>

    <style name="AppTheme.TabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Kept for backwards compatibility -->
    <style name="AppTheme.TabBar.Base" parent="AppTheme.TabLayout" />
    <style name="AppTheme.TabText.Base" parent="AppTheme.TabText" />

    <style name="AppTheme.Light.NoActionBar" parent="AppTheme.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="selected_app_check">@drawable/ic_check_circle_black_18dp</item>
        <item name="cardStyle">@style/AppTheme.CardView</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="tabBarStyle">@style/AppTheme.TabLayout</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorSurface</item>
    </style>

    <!-- Modern CardView style -->
    <style name="AppTheme.CardView" parent="CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>

    <!-- Modern FAB style -->
    <style name="AppTheme.FAB" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/fabBackground</item>
        <item name="tint">@color/fabIcon</item>
        <item name="rippleColor">@color/fabRipple</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <!-- ========================== -->
    <!-- Modern Dark Theme -->
    <!-- ========================== -->
    <style name="AppTheme.Dark.Base" parent="Theme.MaterialComponents">
        <item name="android:textColorPrimary">@color/textColorPrimary_dark</item>
        <item name="android:navigationBarColor">@color/navigationBarColor_dark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="selected_app_check">@drawable/ic_check_circle_white_18dp</item>
        <item name="cardStyle">@style/AppTheme.Dark.CardView</item>
        <item name="menuDeleteIcon">@drawable/ic_delete_white_24dp</item>
        <item name="menuSelectAllIcon">@drawable/ic_select_all_white_24dp</item>
        <item name="menuShareIcon">@drawable/ic_share_white_24dp</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme.Dark.Base">
        <item name="android:colorPrimary">@color/colorPrimary_dark</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="android:colorAccent">@color/colorAccent_dark</item>
        <item name="android:windowBackground">@color/windowBackground_dark</item>
        <item name="android:actionModeBackground">@color/actionMode_background_dark</item>
    </style>

    <style name="AppTheme.Dark.CardView" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/colorSurface_dark</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="AppTheme.Dark.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorAccent_dark</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabSelectedTextColor">@color/textColorPrimary_dark</item>
        <item name="tabTextColor">#80E6E1E5</item>
        <item name="tabTextAppearance">@style/AppTheme.TabText</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar" parent="AppTheme.Dark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="tabBarStyle">@style/AppTheme.Dark.TabLayout</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppTheme.PopupOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- ========================== -->
    <!-- Modern Black (AMOLED) Theme -->
    <!-- ========================== -->
    <style name="AppTheme.Black" parent="AppTheme.Dark.Base">
        <item name="android:colorPrimary">@color/colorPrimary_black</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark_black</item>
        <item name="android:colorAccent">@color/colorAccent_black</item>
        <item name="android:windowBackground">@color/windowBackground_black</item>
        <item name="actionBarTheme">@style/AppTheme.Black.ActionBar</item>
        <item name="android:alertDialogTheme">@style/AppTheme.Black.DialogTheme</item>
    </style>

    <style name="AppTheme.Black.DialogTheme" parent="Theme.MaterialComponents.Dialog">
        <item name="android:colorPrimary">@color/colorPrimary_black</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark_black</item>
        <item name="android:colorAccent">@color/colorAccent_black</item>
        <item name="android:background">@color/dialog_background_black</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="AppTheme.Black.ActionBar" parent="Theme.MaterialComponents">
        <item name="android:background">@color/colorPrimary_black</item>
        <item name="android:actionModeBackground">@color/actionMode_background_black</item>
    </style>

    <style name="AppTheme.Black.NoActionBar" parent="AppTheme.Black">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="tabBarStyle">@style/AppTheme.Dark.TabLayout</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
    </style>

    <style name="AppTheme.PopupOverlay.Black" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/popupBackground_black</item>
    </style>

    <!-- AppBarOverlay theme. Common to all themes -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- ========================== -->
    <!-- Modern White Theme -->
    <!-- ========================== -->
    <style name="AppTheme.White.Base" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkWhite</item>
        <item name="colorAccent">@color/colorAccentWhite</item>
        <item name="actionBarStyle">@style/AppTheme.White.ActionBarStyle</item>
        <item name="actionBarTheme">@style/AppTheme.White.ActionBarTheme</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="menuDeleteIcon">@drawable/ic_delete_dark</item>
        <item name="menuSelectAllIcon">@drawable/ic_select_all_dark</item>
        <item name="menuShareIcon">@drawable/ic_share_dark</item>
    </style>

    <style name="AppTheme.White" parent="AppTheme.White.Base" />

    <style name="AppTheme.White.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/actionBarStyle_white</item>
    </style>

    <style name="AppTheme.White.ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/AppTheme.White.ActionBarStyle.Title</item>
        <item name="colorControlNormal">@color/actionBarStyle_white</item>
    </style>

    <style name="AppTheme.White.ActionBarStyle.Title" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionBarStyle_white</item>
    </style>

    <style name="AppTheme.White.ToolBar" parent="Theme.MaterialComponents.Light">
        <item name="android:textColorPrimary">@color/actionBarStyle_white</item>
        <item name="android:textColorSecondary">@color/actionBarStyle_white</item>
        <item name="actionMenuTextColor">@color/actionBarStyle_white</item>
    </style>

    <style name="AppTheme.TabBar.White" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.TabText.White</item>
        <item name="tabSelectedTextColor">@color/colorAccentWhite</item>
        <item name="tabIndicatorColor">@color/colorAccentWhite</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <style name="AppTheme.TabText.White" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.White.NoActionBar" parent="AppTheme.White">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="selected_app_check">@drawable/ic_check_circle_black_18dp</item>
        <item name="cardStyle">@style/AppTheme.CardView</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarStyle">@style/AppTheme.White.ToolBar</item>
        <item name="tabBarStyle">@style/AppTheme.TabBar.White</item>
        <item name="android:actionModeBackground">@color/colorAccentWhite</item>
    </style>

    <!-- Transparent activity for shortcut action -->
    <style name="AppTheme.Transparent" parent="Theme.MaterialComponents">
        <item name="android:background">#00000000</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- ========================== -->
    <!-- Text Styles -->
    <!-- ========================== -->
    <style name="AppTheme.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Subtitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="AppTheme.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
